{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": ".",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@types/*": [
                "./types/*"
            ],
            "@physics/*": [
                "./physics/*"
            ],
            "@ui/*": [
                "./ui/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@core/*": [
                "./core/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "js"
    ]
}